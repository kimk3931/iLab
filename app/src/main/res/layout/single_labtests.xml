<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DAD1D1"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/labimage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/screen1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/labimage"
            android:background="#16AAAAAA"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Covid Profile Test"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/test_name"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="A test for COVID-19. "
                android:textColor="#787474"
                android:textSize="16sp"
                android:maxLines="2"
                android:textStyle="normal"
                android:layout_marginTop="6dp"
                android:id="@+id/test_description"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_toRightOf="@id/labimage"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="315dp"
                android:fontFamily="@font/montserrat"
                android:text="KES: 1,000"
                android:textColor="#FF5722"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:id="@+id/test_cost"/>

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>